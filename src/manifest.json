{
  "manifest_version": 3,
  "name": "Vision Correction Extension",
  "version": "1.0.0",
  "description": "Simulates diopter correction for users with nearsightedness",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "pages/popup.html",
    "default_icon": {
      "16": "assets/icon16.png",
      "48": "assets/icon48.png",
      "128": "assets/icon128.png"
    }
  },
  "background": {
    "service_worker": "scripts/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scripts/content.js"],
      "css": ["styles/content.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["assets/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "options_page": "pages/options.html",
  "commands": {
    "toggle-correction": {
      "suggested_key": {
        "default": "Alt+Shift+V"
      },
      "description": "Toggle vision correction on/off"
    },
    "start-calibration": {
      "suggested_key": {
        "default": "Alt+Shift+C"
      },
      "description": "Start eye tracking calibration"
    },
    "cycle-profiles": {
      "suggested_key": {
        "default": "Alt+Shift+P"
      },
      "description": "Cycle through profiles"
    },
    "toggle-comparison": {
      "suggested_key": {
        "default": "Alt+Shift+A"
      },
      "description": "Toggle A/B comparison view"
    }
  }
}